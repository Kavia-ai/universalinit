<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns:tizen="http://tizen.org/ns/widgets" 
        xmlns="http://www.w3.org/ns/widgets" 
        id="http://yourdomain/{KAVIA_TEMPLATE_PROJECT_NAME}" 
        version="{KAVIA_PROJECT_VERSION}" 
        viewmodes="maximized">
    
    <tizen:application id="TizenApp.{KAVIA_TEMPLATE_PROJECT_NAME}" 
                       package="TizenApp" 
                       required_version="6.0"/>
    
    <content src="index.html"/>
    <name>{KAVIA_TEMPLATE_PROJECT_NAME}</name>
    <icon src="icon.png"/>
    
    <feature name="http://tizen.org/feature/screen.size.all"/>
    
    <tizen:profile name="tv"/>
    
    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/tv.inputdevice"/>
    
    <tizen:setting screen-orientation="landscape" 
                   context-menu="disable"
                   background-support="disable"
                   encryption="disable"
                   install-location="auto"/>
</widget>
